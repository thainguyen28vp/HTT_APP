{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "@R": ["./app/assets/R.ts"],
      "@app/*": ["./app/*"],
      "@screen/*": ["./app/screens/*"],
      "@config/*": ["./app/config/*"],
      "@theme/*": ["./app/theme/*"],
      "@navigation/*": ["./app/navigation/*"],
      "@components/*": ["./app/components/*"],
      "@services/*": ["./app/services/*"],
      "@utils/*": ["./app/utils/*"],
      "@assets/*": ["./app/assets/*"],
      "@hooks/*": ["./app/hooks/*"],
      "@store/*": ["./app/store/*"],
      "@service/*": ["./app/service/*"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
